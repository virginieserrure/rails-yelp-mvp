<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>


<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>
    <br>
    <%= review.rating %></li>
  <% end %>
</ul>
<br>

<%= link_to "Return all restaurants", restaurants_path, class: "btn btn-primary" %>

<%= link_to "Edit", edit_restaurant_path, class: "btn btn-primary" %>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
